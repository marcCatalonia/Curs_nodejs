<%- include('../includes/header.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    </header>

    <main>
        <% if (prods.length > 0){ %>
            <div class="grid">
                <% for(let prod of prods){ %>
                <article class="card product-item">
                    <header>
                        <h1 class="product__title"><%= prod.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= prod.url %>" alt="<%= prod.title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price"><%= prod.price %></h2>
                        <p class="product__description"><%= prod.description%></p>
                        <div class="card__actions">
                                <button class="btn" href="/admin/edit-product">Edit</button>
                                <form action="/admin/delete-product" method="POST">
                                    <button class="btn" type="submit">
                                        Delete
                                    </button>
                                </form>
                        </div>
                    </div>
                </article>
                <% } %>
            </div>
        <% }else %>

        <h1>No Products</h1>
    </main>
</body>

